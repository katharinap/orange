#graph.big-plot
  = high_chart("plot", @chart) do |chart|
    = raw "options.plotOptions.series.point.events.click = function() { $.ajax({ url: this.options.url }); }"

#new-push-up.new-exercise.pull-md-right
  = render partial: 'exercises/add', locals: { exercise: @new_push_up, title: 'Add Push-Up' }
#new-sit-up.new-exercise.pull-md-right
  = render partial: 'exercises/add', locals: { exercise: @new_sit_up, title: 'Add Sit-Up' }

#exercise-modal.modal.fade
  .modal-dialog{ role: 'document' }
    .modal-content
      .modal-header
        %button{ type: 'button', class: 'close', data: { dismiss: 'modal' }, aria: { label: 'Close' }}
          %span{ aria: { hidden: true }}
            = '&times'.html_safe
        %h4{ class: 'modal-title' }
          Edit
      .modal-body
        #exercise-form
