#new-push-up.new-exercise.pull-md-right
  = link_to 'Add Push-Up', new_exercise_path(type: 'PushUp'), remote: true, class: 'btn btn-secondary'
#new-sit-up.new-exercise.pull-md-right
  = link_to 'Add Sit-Up', new_exercise_path(type: 'SitUp'), remote: true, class: 'btn btn-secondary'

#graph.big-plot
  = high_chart("plot", @chart) do |chart|
    = raw "options.plotOptions.series.point.events.click = function() { showModal(this); }"

#exercise-modal.modal.fade
  .modal-dialog{ role: 'document' }
    .modal-content
      .modal-header
        %button{ type: 'button', class: 'close', data: { dismiss: 'modal' }, aria: { label: 'Close' }}
          %span{ aria: { hidden: true }}
            = '&times'.html_safe
        %h4{ class: 'modal-title' }
          Edit
      .modal-body
        #exercise-form
